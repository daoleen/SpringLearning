<?xml version="1.0" encoding="UTF-8"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core"
     xmlns:joda="http://www.joda.org/joda/time/tags"
     xmlns:spring="http://www.springframework.org/tags">
    <jsp:directive.page contentType="text/html;charset=UTF-8" />
    <jsp:output omit-xml-declaration="yes" />

    <!-- Строки локализации -->
    <spring:message code="hello_cat" var="helloCatMessage" />
    <spring:message code="list_articles" var="listArticlesMessage" />

    <strong>${helloCatMessage} ${name}!</strong><br />
    ${listArticlesMessage}:<br />
    <table>
        <thead>
            <th onClick="return idClick();">id</th>
            <th>name</th>
            <th>description</th>
            <th>created_at</th>
            <th>logo</th>
            <th><jsp:text/></th>
            <th><jsp:text/></th>
        </thead>
        <c:if test="${not empty articlesPage}">
            <c:forEach items="${articlesPage.content}" var="article">
                <tbody>
                    <td>${article.id}</td>
                    <td class="red"><a href="${urlHome}/articles/${article.id}">${article.name}</a></td>
                    <td>${article.description}</td>
                    <td class="green"><joda:format value="${article.created_at}" pattern="dd.MM.YYYY HH:mm:ss" /></td>
                    <td>${article.logo}</td>
                    <td><a href="${urlHome}/articles/${article.id}?form"><spring:message code="label_article_edit_link" /></a></td>
                    <td><jsp:text/></td>
                </tbody>
            </c:forEach>
        </c:if>
    </table>
    <br />
    Pages:
    <c:forEach begin="1" step="1" end="${articlesPage.totalPages}" var="i">
        <c:choose>
            <c:when test="${articlesPage.number+1 == i}">
                ${i}
            </c:when>
            <c:otherwise>
                <a href="/articles/pageable/?page=${i}&amp;size=3">${i}</a>
            </c:otherwise>
        </c:choose>
        <jsp:text> </jsp:text>
    </c:forEach>
</div>